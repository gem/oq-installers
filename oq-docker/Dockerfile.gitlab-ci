# vi:syntax=dockerfile
FROM centos:7
MAINTAINER Daniele Vigan√≤ <daniele@openquake.org>

RUN curl -so /etc/yum.repos.d/gem-openquake-epel-7.repo \
    https://copr.fedorainfracloud.org/coprs/gem/openquake/repo/epel-7/gem-openquake-epel-7.repo
RUN yum -y install python3-oq-libs && \
    yum -y clean all

ENV LANG en_US.UTF-8
ENV PATH /opt/openquake/bin:$PATH

ENTRYPOINT ["/bin/bash", "-l", "-c"]
